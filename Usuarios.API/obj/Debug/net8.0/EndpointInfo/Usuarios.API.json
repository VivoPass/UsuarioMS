{
  "openapi": "3.0.4",
  "info": {
    "title": "Usuarios API",
    "description": "API del Microservicio de Usuarios que gestiona la información de usuarios, roles y actividades.",
    "version": "v1"
  },
  "paths": {
    "/api/Usuarios/crearUsuario": {
      "post": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Crea un nuevo usuario.",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "Nombre": {
                    "type": "string"
                  },
                  "Apellido": {
                    "type": "string"
                  },
                  "FechaNacimiento": {
                    "type": "string",
                    "format": "date"
                  },
                  "Correo": {
                    "type": "string"
                  },
                  "Telefono": {
                    "type": "string"
                  },
                  "Direccion": {
                    "type": "string"
                  },
                  "FotoPerfil": {
                    "type": "string"
                  },
                  "Rol": {
                    "type": "string"
                  },
                  "imagen": {
                    "type": "string",
                    "description": "Archivo de imagen de perfil enviado en el formulario.",
                    "format": "binary"
                  }
                }
              },
              "encoding": {
                "Nombre": {
                  "style": "form"
                },
                "Apellido": {
                  "style": "form"
                },
                "FechaNacimiento": {
                  "style": "form"
                },
                "Correo": {
                  "style": "form"
                },
                "Telefono": {
                  "style": "form"
                },
                "Direccion": {
                  "style": "form"
                },
                "FotoPerfil": {
                  "style": "form"
                },
                "Rol": {
                  "style": "form"
                },
                "imagen": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Usuarios/modificarUsuario": {
      "patch": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Modifica un usuario existente.",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "ID del usuario a modificar (FromQuery).",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "Nombre": {
                    "type": "string"
                  },
                  "Apellido": {
                    "type": "string"
                  },
                  "Telefono": {
                    "type": "string"
                  },
                  "Direccion": {
                    "type": "string"
                  },
                  "FotoPerfil": {
                    "type": "string"
                  },
                  "nuevaImagen": {
                    "type": "string",
                    "description": "Nueva imagen de perfil opcional.",
                    "format": "binary"
                  }
                }
              },
              "encoding": {
                "Nombre": {
                  "style": "form"
                },
                "Apellido": {
                  "style": "form"
                },
                "Telefono": {
                  "style": "form"
                },
                "Direccion": {
                  "style": "form"
                },
                "FotoPerfil": {
                  "style": "form"
                },
                "nuevaImagen": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Usuarios/getUsuarioByCorreo": {
      "get": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Obtiene los detalles de un usuario a partir de su correo electrónico.",
        "parameters": [
          {
            "name": "correo",
            "in": "query",
            "description": "Correo electrónico del usuario.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Usuarios/getUsuarioById": {
      "get": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Obtiene los detalles de un usuario a partir de su ID.",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "ID del usuario.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Usuarios/getTodosUsuarios": {
      "get": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Obtiene la lista completa de todos los usuarios registrados.",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Usuarios/getRolByNombre": {
      "get": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Obtiene los detalles de un rol a partir de su nombre.",
        "parameters": [
          {
            "name": "nombre",
            "in": "query",
            "description": "Nombre del rol.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Usuarios/getRolById": {
      "get": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Obtiene los detalles de un rol a partir de su ID.",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "ID del rol.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Usuarios/getTodosRoles": {
      "get": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Obtiene la lista completa de todos los roles disponibles.",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Usuarios/activity": {
      "get": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Obtiene el historial de actividad de un usuario específico.",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "ID del usuario.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Usuarios/publishActivity": {
      "post": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Publica un evento de actividad del usuario en el bus de mensajes.",
        "requestBody": {
          "description": "Detalles de la actividad a registrar.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CrearActUsuarioDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CrearActUsuarioDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CrearActUsuarioDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CrearActUsuarioDTO": {
        "required": [
          "accion",
          "idUsuario"
        ],
        "type": "object",
        "properties": {
          "idUsuario": {
            "type": "string",
            "nullable": true
          },
          "accion": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}